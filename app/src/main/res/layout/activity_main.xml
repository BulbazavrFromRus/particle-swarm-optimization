<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.diplomawork2.ParticleView
        android:id="@+id/particleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/restart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play again"
        android:layout_marginTop="100dp"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <Button
        android:id="@+id/next_level_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next level"
        android:layout_marginBottom="300dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />


    <!--Explosion animation-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/explosionAnimationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:lottie_rawRes="@raw/explosion"
        app:lottie_loop="true"
        android:visibility="gone"
        android:layout_marginBottom="2dp"
        />

    <!--Victory animation-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/victoryAnimationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:lottie_rawRes="@raw/victory"
        app:lottie_loop="true"
        android:visibility="gone" />


    <!--Loss animation-->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lossAnimationView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        app:lottie_rawRes="@raw/loss"
        app:lottie_loop="true"
        android:visibility="gone"
        />






</RelativeLayout>
